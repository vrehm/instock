<h1 class="blue">Stock Adjustments</h1>
<% if @stock_adjustments.blank? %>
  <div class="box wrapper">
    <em class="note">You have not done any <strong>stock adjustments</strong> yet.</em>
  </div>
<% else %>


  <table>
    <thead>
      <tr>
        <td>Date</td>
        <td>Reason</td>
        <td>Employee</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody>
    <% @stock_adjustments.each do |stock_adjustment| %>
      <tr>
        <td><%= link_to(stock_adjustment.created_at , {:action => 'show', :id => stock_adjustment.id}) %></td>
        <td><%=h stock_adjustment.reason %></td>
        <td><%=h stock_adjustment.created_by %></td>
        <td><%= link_to 'X', stock_adjustment, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end #if %>
<p><%= link_to("Add Stock Adjustment", {:action => 'new', :controller => 'stock_adjustments'}, :method => :get) %></p>