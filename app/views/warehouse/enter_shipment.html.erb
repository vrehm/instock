<% content_for(:custom_js, javascript_include_tag('enter_shipment')) %>
<h1>Enter Shipment Data<h2>
<div class"shipmentForm">
	<% form_for(:shipment) do |form| %>
		<table>
			<thead>
				<tr><td>Product Variant</td><td>Current Shopify Stock</td><td>Received</td><td>New Total</td></tr>
		 	</thead>
			<tbody>
				<% fields_for(:shipment_item) do |item_fields| %>
					<% @shipment.shipment_items.each do |si| %>
						<tr class="shipmentItem">
							<td><%= si.title %></td>
							<td class="oldCount">
								<%= @variants[si.variant_id].inventory_quantity unless @variants[si.variant_id].blank? %>
							</td>
							<td class="newCount"><%= item_fields.text_field(:count) %></td>
							<td class="newTotal">&nbsp</td>
						</tr>
					<% end #each %>
				<% end #fields_for %>
			</tbody>
		</table>
		<%= submit_tag("Process Shipment") %>
	<% end #form_for %>
</div>

